<div class="row">
	<div class="alert-box">Find protected structures within 5KM of a given location.</div>
	<%= form_tag protected_structures_path, :method => :get do %>
	    <%= text_field_tag :search, params[:search], :class => "input-text" %>
	    <%= submit_tag "Search Location", :name => nil, :class => "button small radius blue" %>
	<% end %>
</div>